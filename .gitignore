!backend/.env.example
!backend/.env.sample
frontend/.env
frontend/.env.*
!frontend/.env.example
!frontend/.env.sample

# Build outputs
dist/
build/
coverage/
frontend/dist/
backend/dist/

# Caches and temporary files
.eslintcache
.cache/
.tmp/
.pnpm-store/
.npm/
.vite/

# IDE/editor
.vscode/
.idea/

# OS artifacts
.DS_Store
Thumbs.db

# TypeScript build info (if added later)
*.tsbuildinfo